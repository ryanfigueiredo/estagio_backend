<h3>Editar Tarefa:</h3>
<form action="/admin/tarefa/edit" method="POST">
<input type="hidden" name="id" value="{{tarefa._id}}">
    <label for="nome">Nome: </label>
    <input type="text" id="nome" name="nome" placeholder="nome da tarefa" class="form-control" value="{{tarefa.nome}}">
    <label for="descricao">Descricão</label>
    <input type="text" name="descricao" id="descricao" class="form-control" value="{{tarefa.descricao}}">
    <label for="cliente">Cliente: </label>
    <input type="text" name="cliente" class="form-control" value="{{tarefa.cliente}}">
    <label for="prazo">Data de conclusão: {{tarefa.prazo}}</label>
    <input type="date" name="prazo" id="prazo" class="form-control" value="{{tarefa.prazo}}">
    <br>
    <label for="prioridade">Prioridade da tarefa: {{tarefa.prioridade}}</label>
    <br>
    <input type="radio" name="prioridade" id="alta" value="Alta" > Alta
    <input type="radio" name="prioridade" id="media" value="Media" > Média
    <input type="radio" name="prioridade" id="baixa" value="Baixa"> Baixa
    <br><br>
    <label for="concluida">Status de conclusão: {{tarefa.concluida}}</label>
    <br>
    <input type="radio" name="concluida" id="concluida" value="Concluida" > Concluida
    <input type="radio" name="concluida" id="emProcesso" value="Em Processo" > Em processo
    <input type="radio" name="concluida" id="naoConcluida" value="Não Concluida"  > Não Concluida
    <br><br>
    <button type="submit" class="btn btn-success">Editar Tarefa</button>




</form>


{{!-- Script para buscar opção marcada no type:radio direto do banco de dados --}}
<script>
    window.onload = function() {
        var radios = document.getElementsByName("prioridade");
        var radPrio = document.getElementsByName("concluida")
        
        for (var i = 0; i < radios.length; i++) {
        
            if (radios[i].value === "{{tarefa.prioridade}}") {
                radios[i].checked = true;
            }
        }

        for (var i = 0; i < radPrio.length; i++) {
        
            if (radPrio[i].value === "{{tarefa.concluida}}") {
                radPrio[i].checked = true;
            }
        }

    };

</script>


