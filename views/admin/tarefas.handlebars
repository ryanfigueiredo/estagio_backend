<h2>Lista de Tarefas:</h2>
<hr>

<a href="/admin/tarefas/add"><button class="btn btn-success">Nova Tarefa</button></a>


{{#each tarefas}}
    <div class="card mt-4">
        <div class="card-body">
            <h2>{{nome}}</h2>
            <h4>Descrição: {{descricao}}</h4>
            <h4>Data de conclusão: {{prazo}}</h4>
            <h4>Prioridade: {{prioridade}}</h4>
            <h4>Status: {{concluida}}</h4>
            <h4>Cliente: {{cliente}}</h4>
            <br>
            <a href="/admin/tarefas/edit/{{_id}}"><button class="btn btn-success mt-4">Editar tarefa</button></a>
            <form action="/admin/tarefas/deletar" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
            <button type="submit" class="btn btn-danger mt-2">Deletar tarefa</button>
            </form>
        </div>
    </div>
{{else}}
<h4 class="mt-5">nenhuma categoria registrada!</h4>
{{/each}}